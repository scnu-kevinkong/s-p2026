    [] s=1 -> 1/4 : (s'=0) + 1/4 : (s'=1) + 1/4 : (s'=3) + 1/4 : (s'=4);
    [] s=2 -> 1/4 : (s'=0) + 1/4 : (s'=2) + 1/4 : (s'=3) + 1/4 : (s'=4);
    [] s=3 -> 1/4 : (s'=1) + 1/4 : (s'=2) + 1/4 : (s'=3) + 1/4 : (s'=4);
    [] s=4 -> 1 : (s'=4);

endmodule
